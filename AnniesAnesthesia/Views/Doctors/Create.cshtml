@{
  Layout = "_Layout";
}

@model AnniesAnesthesia.Models.Doctor

<h4>Add a new doctor</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class="form-control", @required="required"})

  @Html.LabelFor(model => model.RealHireDate)
  @Html.TextBoxFor(model => model.RealHireDate, new {@class="form-control", @type="date", @required="required"})

  @Html.Label("Add a Specialty")
  @Html.DropDownList("SpecialtyId")

  <input type="submit" value="Add new doctor" />
}
<p>@Html.ActionLink("Show all doctors", "Index")</p> 